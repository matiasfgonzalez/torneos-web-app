  referees      Referee[]   // rbitros gestionados por este usuario (opcional)
}

model News {
  id            String    @id @default(uuid())
  title         String
  summary       String?   // Resumen corto para vistas previas
  content       String
  coverImageUrl String?   // Imagen destacada (opcional)
  published     Boolean   @default(false) // Para controlar si ya est谩 visible o en borrador
  publishedAt   DateTime  @default(now()) // Fecha de publicaci贸n  
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
}

