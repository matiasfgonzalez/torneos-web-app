enum MatchStatus {
  PROGRAMADO      // Programado
  EN_JUEGO        // En curso
  ENTRETIEMPO     // Pausa entre tiempos
  FINALIZADO      // Terminado
  SUSPENDIDO      // Suspendido temporalmente (clima, incidentes, etc.)
  POSTERGADO      // Reprogramado para otra fecha
  CANCELADO       // Anulado, no se jugar谩
