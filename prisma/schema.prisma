model TournamentTeam {
  id           String   @id @default(uuid()) // ID 煤nico del registro

  tournamentId String                         // FK al torneo
  tournament   Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade) // Relaci贸n al torneo (si se elimina el torneo, se elimina esta relaci贸n)

  teamId       String                         // FK al equipo
  team         Team       @relation(fields: [teamId], references: [id], onDelete: Cascade)       // Relaci贸n al equipo (si se elimina el equipo, se elimina esta relaci贸n)

  group        String?   // Grupo al que pertenece el equipo en el torneo (ej: "A", "B", etc.)
  isEliminated Boolean?  // Indica si el equipo fue eliminado del torneo
  notes        String?   // Notas adicionales (observaciones, comentarios)

  // Stats Globales (Acumuladas) - Mantenemos esto para visualizaci贸n r谩pida
  matchesPlayed Int     @default(0) 
  wins          Int     @default(0) 
  draws         Int     @default(0) 
  losses        Int     @default(0) 
  goalsFor      Int     @default(0) 
  goalsAgainst  Int     @default(0) 
  goalDifference Int    @default(0) 
  points        Int     @default(0) 

  createdAt    DateTime @default(now()) // Fecha de creaci贸n del registro
  updatedAt    DateTime @updatedAt      // Fecha de 煤ltima actualizaci贸n

  //  Relaciones inversas
  homeMatches Match[] @relation("HomeMatches")
  awayMatches Match[] @relation("AwayMatches")

  penaltyWins Match[] @relation("PenaltyWinner")

  teamPlayer    TeamPlayer[]  //  Relaci贸n M:N
  
  // Relaci贸n con stats por fase
  phaseStats    TeamPhaseStats[]

  @@unique([tournamentId, teamId]) // Un equipo no puede repetirse en el mismo torneo
}

// NUEVO: Estad铆sticas por Fase (para separar grupos, segunda fase, etc.)
model TeamPhaseStats {
  id                String   @id @default(uuid())
  
  tournamentTeamId  String
  tournamentTeam    TournamentTeam @relation(fields: [tournamentTeamId], references: [id], onDelete: Cascade)
  
  tournamentPhaseId String
  tournamentPhase   TournamentPhase @relation(fields: [tournamentPhaseId], references: [id], onDelete: Cascade)
  
  groupId           String?   // Grupo espec铆fico dentro de esta fase (ej: "A", "B")

  matchesPlayed Int     @default(0)
  wins          Int     @default(0)
  draws         Int     @default(0)
  losses        Int     @default(0)
  goalsFor      Int     @default(0)
  goalsAgainst  Int     @default(0)
  goalDifference Int    @default(0)
  points        Int     @default(0)

  // Desempates manuales o puntos extra/sanci贸n
  bonusPoints   Int     @default(0) 
  
  updatedAt     DateTime @updatedAt
  
  @@unique([tournamentTeamId, tournamentPhaseId])
}


model TeamPlayer {
  id        String   @id @default(uuid()) // ID 煤nico del registro

  tournamentTeamId   String
  tournamentTeam     TournamentTeam   @relation(fields: [tournamentTeamId], references: [id], onDelete: Cascade) // Relaci贸n al equipo dentro del torneo

  playerId  String                          // FK al jugador
