  enabled     Boolean    @default(true) // 猬锔 Campo nuevo para indicar si est谩 habilitado
  rules       String?   // Guardar un reglamento, reglas especiales o configuraciones personalizadas del torneo
  trophy      String?   // descripci贸n del premio
  deletedAt   DateTime?   // Fecha de eliminaci贸n l贸gica (si aplica)


  startDate   DateTime
  endDate     DateTime?
  
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime         @default(now())
