model User {
  id            String      @id @default(uuid())
  clerkUserId   String      @unique
  email         String      @unique
  name          String?
  imageUrl      String?
  phone         String?     // Tel茅fono del usuario
  location      String?     // Ubicaci贸n/ciudad
  bio           String?     // Biograf铆a
