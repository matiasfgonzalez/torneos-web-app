{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@modules/*": [
        "./modules/*"
      ],
      "@modules/torneos/*": [
        "./modules/torneos/*"
      ],
      "@modules/equipos/*": [
        "./modules/equipos/*"
      ],
      "@modules/jugadores/*": [
        "./modules/jugadores/*"
      ],
      "@modules/partidos/*": [
        "./modules/partidos/*"
      ],
      "@modules/noticias/*": [
        "./modules/noticias/*"
      ],
      "@modules/arbitros/*": [
        "./modules/arbitros/*"
      ],
      "@modules/usuarios/*": [
        "./modules/usuarios/*"
      ],
      "@modules/shared/*": [
        "./modules/shared/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prisma/seeds/phase-seed.js",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
